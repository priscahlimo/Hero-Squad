{{#partial "content"}}


    <h1>Add a new Hero:</h1>

    <form action="/heroes/new" method="POST">
        <div class="form-group">
            <label for="name">Name of Hero</label>
            <input id="name" name="name" type="text" class="form-control" style="margin-bottom: 40px;" placeholder="Enter Hero Name Here...">
        </div>

        <div class="form-group">
            <label for="age">Age</label>
            <input id="age" name="age" type="text" class="form-control" style="margin-bottom: 40px;" placeholder="Enter Age ...">
        </div>

        <div class="form-group">
            <label for="special-power">Special Power</label>
            <input id="special-power" name="special-power" type="text" class="form-control" style="margin-bottom: 40px;" placeholder="Enter Special Power...">
        </div>

        <div class="form-group">
            <label for="weakness">Weakness</label>
            <input id="weakness" name="weakness" type="text" class="form-control" style="margin-bottom: 40px;" placeholder="Enter Weakness...">
        </div>

       <div class="row mb-2">
          <div class="col">
            <label for="squadId">Squad</label>
                <select class="form-control" name="squadId" id="squadId" required>
                       {{#each squads}}
                                  <option value="{{id}}">{{name}}</option>
                                  {{/each}}
                  </select>
            </div>
        </div>

        <button type="submit" class="btn btn-primary">Add Hero</button>
    </form>

{{/partial}}

{{> layout.hbs}}